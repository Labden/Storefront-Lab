@model Product

<form method="post">

    <p>Product Name</p>
    <input type="text" maxlength="100" name="Name" required />
    <br />

    <p>Price</p>
    <input type="number" name="Price" />
    <br />

    <p>Quantity</p>
    <input type="number" name="Quantity" />
    <br />

    <p>Description</p>
    <input type="text" maxlength="200" name="Description" />
    <br />
    <input type="submit" />

</form>
